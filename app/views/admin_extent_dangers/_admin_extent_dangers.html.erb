<% if @entity.present? %>
    <h2><%= @entity.business_name %> Nit: <%= EvaluationRuleDetail.miles(@entity.identification_number) if @entity.identification_number.present? %>-<%= @entity.verification_digit if @entity.verification_digit.present? %></h2>
<% end %>


<% if @admin_extent_dangers.present? %>

    <table class="table table-hover"> 
        <thead>
            <tr>
                <th scope="col"><%= t('.id') %></th>
                <th scope="col">Nit Entidad</th>
                <th scope="col">Entidad</th>
                <th scope="col">Usuario</th>
                <th scope="col"><%= t('.date_creation') %></th>
                <th scope="col">Ver Matriz</th>
                <th scope="col">PDF</th>
                <th scope="col">Ver Encuesta</th>
        </tr>
        </thead>

        <% @admin_extent_dangers.each do |admin_extent_danger| %> 
            <tr> 
                <td><%= admin_extent_danger.id %></td>
                <td><%= admin_extent_danger.entity.identification_number %></td>
                <td><%= admin_extent_danger.entity.business_name %></td>
                <td><%= admin_extent_danger.user.name %></td>
                <td><%= admin_extent_danger.date_creation %></td>
                <td><%= link_to t('common.show'), matrix_prevention_admin_extent_dangers_path(admin_extent_danger), class: 'btn btn-sm btn-primary' %></td>
                <td><%= link_to "PDF", matrix_vista_admin_extent_dangers_path(admin_extent_danger, format: 'pdf'), class: 'btn btn-sm btn-success' %> </td>
                <td><%= link_to t('common.show'), admin_extent_danger_path(admin_extent_danger), class: 'btn btn-sm btn-primary' %></td>

            </tr>
        <% end %>  
        <hr>  
    </table>  
    <br>
<% else %>

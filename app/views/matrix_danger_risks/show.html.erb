        <% @nro = 0 %>
        <% @matrix_danger_items.each do |item| %>  
            <% @nro += 1 %>            
            <tbody>
                <tr>
                    <td style="background-color: black;">&nbsp;</td>
                    <td style="border:1px solid black;text-align:center;"><%= @nro %></td>
                    <td style="border:1px solid black"><%= item.created_at.strftime("%F") %></td>
                    <td style="border:1px solid black"><%= item.updated_at.strftime("%F") %></td>
                    <td style="border:1px solid black"><%= item.source_information %></td>
                    <td style="border:1px solid black"><%=  CompanyPosition.name_cargo(item.type_cargo)  %></td>
                    <td style="border:1px solid black"><%= item.origin %></td>
                    <td style="border:1px solid black"><%= item.activity %></td>
                    <td style="border:1px solid black"><%= item.task %></td>
                    <td style="border:1px solid black"><%= item.label_type_task(item.type_task) %></td>
                    <td style="border:1px solid black"><%= item.clasification_danger_detail.clasification_danger.name if item.clasification_danger_detail_id.to_i > 0  %></td>
                    <td style="border:1px solid black"><%= item.clasification_danger_detail.name if item.clasification_danger_detail_id.present? && item.clasification_danger_detail_id.to_i > 0 %></td>
                    <td style="border:1px solid black"><%= item.possible_effects_health %></td>

                   
                    <td style="border:1px solid black"><%= item.description_existing_control_origin  %></td>
                    <td style="border:1px solid black"><%= item.description_existing_control_medium  %></td>
                    <td style="border:1px solid black"><%= item.description_existing_control_person  %></td>
                    <% if item.deficiency_level == 10  %>
                         <td style="border:1px solid black; text-align:center; background-color:#F03553">Muy Alto - <%= item.deficiency_level  %></td>
                    <% end  %>    
                    <% if item.deficiency_level == 6  %>
                         <td style="border:1px solid black; text-align:center;">Alto - <%= item.deficiency_level  %></td>
                    <% end  %>    
                    <% if item.deficiency_level == 2  %>
                         <td style="border:1px solid black; text-align:center;">Medio - <%= item.deficiency_level  %></td>
                    <% end  %>    
                    <% if item.deficiency_level < 2  %>
                         <td style="border:1px solid black; text-align:center;">Bajo - <%= item.deficiency_level  %></td>
                    <% end  %>    
                    <% if item.exposure_level == 4  %>
                         <td style="border:1px solid black; text-align:center;">Continua - <%= item.exposure_level  %></td>
                    <% end  %>    
                    <% if item.exposure_level == 3  %>
                         <td style="border:1px solid black; text-align:center;">Frecuente - <%= item.exposure_level  %></td>
                    <% end  %>    
                    <% if item.exposure_level == 2  %>
                         <td style="border:1px solid black; text-align:center;">Ocasional - <%= item.exposure_level  %></td>
                    <% end  %>    
                    <% if item.exposure_level < 2  %>
                         <td style="border:1px solid black; text-align:center;">Esporádica - <%= item.exposure_level  %></td>
                    <% end  %> 
                    <% if item.interpretation == 'MUY ALTO'  %>
                        <td style="border:1px solid black; text-align:center;"><%= item.probability_level  %></td>
                        <td style="border:1px solid black; text-align:center;"><%= item.interpretation  %></td>
                    <% end  %> 
                    <% if item.interpretation == 'ALTO'  %>
                        <td style="border:1px solid black; text-align:center;"><%= item.probability_level  %></td>
                        <td style="border:1px solid black; text-align:center;"><%= item.interpretation  %></td>
                    <% end  %> 
                    <% if item.interpretation == 'MEDIO'  %>
                        <td style="border:1px solid black; text-align:center;"><%= item.probability_level  %></td>
                        <td style="border:1px solid black; text-align:center;"><%= item.interpretation  %></td>
                    <% end  %> 
                    <% if item.interpretation == 'BAJO'  %>
                        <td style="border:1px solid black; text-align:center;"><%= item.probability_level  %></td>
                        <td style="border:1px solid black; text-align:center;"><%= item.interpretation  %></td>
                    <% end  %> 
                    <% if item.consequence_level == 100  %>
                         <td style="border:1px solid black; text-align:center;">Mortal o Catastrófico - <%= item.consequence_level  %></td>
                    <% end  %>    
                    <% if item.consequence_level == 60  %>
                         <td style="border:1px solid black; text-align:center;">Muy Grave - <%= item.consequence_level  %></td>
                    <% end  %>    
                    <% if item.consequence_level == 25  %>
                         <td style="border:1px solid black; text-align:center;">Grave - <%= item.consequence_level  %></td>
                    <% end  %>    
                    <% if item.consequence_level < 25  %>
                         <td style="border:1px solid black; text-align:center;">Leve - <%= item.consequence_level  %></td>
                    <% end  %>    
                    <% if item.risk_level_interpretation.to_s == 'I No Aceptable'  %>
                         <td style="border:1px solid black; text-align:center;"><%= item.level_risk_intervention  %></td>
                         <td style="border:1px solid black;"><%= item.risk_acceptability  %></td>
                         <td style="border:1px solid black; text-align:center;background-color:#F03553"><%= item.risk_level_interpretation %></td>
                    <% end  %>    
                    <% if item.risk_level_interpretation.to_s == 'II No Aceptable'  %>
                         <td style="border:1px solid black; text-align:center;"><%= item.level_risk_intervention  %></td>
                         <td style="border:1px solid black;"><%= item.risk_acceptability  %></td>
                         <td style="border:1px solid black; text-align:center; background-color:#D98F3B;"><%= item.risk_level_interpretation %></td>
                    <% end  %>    

                    <% if item.risk_level_interpretation.to_s == 'III Aceptable'  %>
                         <td style="border:1px solid black; text-align:center;"><%= item.level_risk_intervention  %></td>
                         <td style="border:1px solid black;"><%= item.risk_acceptability  %></td>
                         <td style="border:1px solid black; text-align:center;; background-color:#F0E835"><%= item.risk_level_interpretation %></td>
                    <% end  %>    
                    <% if item.risk_level_interpretation.to_s == 'IV Aceptable'  %>
                         <td style="border:1px solid black; text-align:center;"><%= item.level_risk_intervention  %></td>
                         <td style="border:1px solid black;"><%= item.risk_acceptability  %></td>
                         <td style="border:1px solid black; text-align:center; background-color:#038018;"><%= item.risk_level_interpretation %></td>
                    <% end  %>  
                    <td style="border:1px solid black; text-align:center"><%= item.intervention_measures_elimination  %></td>
                    <td style="border:1px solid black; text-align:center""><%= item.intervention_measures_replacement  %></td>
                    <td style="border:1px solid black"><%= item.intervention_measures_engineering_control  %></td>
                    <td style="border:1px solid black"><%= item.intervention_measures_acsw  %></td>
                    <td style="border:1px solid black"><%= item.intervention_measures_ppee  %></td>
                    <td style="border:1px solid black"><%= link_to t('common.edit'), edit_matrix_danger_item_path(item), class: 'btn btn-xs btn-primary'  %></td>
                    <td style="background-color: black;">&nbsp;</td>
                </tr>
            </body>
        <% end %>

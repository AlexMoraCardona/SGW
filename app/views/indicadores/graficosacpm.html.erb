<br>
<div class="container col-11"> 
    <div>
        <h3 style="text-align:center">Indicadores Matriz De Seguimiento De Acciones Correctivas Preventivas y De Mejora</h3>
        <h3 style="text-align:center"><%= @entity.business_name %>  Nit:<%= @entity.identification_number %></h3>
    </div> 

    <hr>
    
    <div>
         <h4 style="text-align:center">Indicador Estado de las Acciones</h4>
         <hr>
    </div>

    
    <div class="row g-2">
        <div class="col-sm-5">
            <table  class="table" >
                <thead>
                    <tr>
                        <th colspan="3"; style="text-align:center">Cumplimiento Requisitos Legales</th>
                    </tr>
                    <tr>
                        <th scope="col" style="text-align:center">Tipo de Accion</th>
                        <th scope="col" style="text-align:center">Cantidad</th>
                        <th scope="col" style="text-align:center">En estado abierto</th>
                        <th scope="col" style="text-align:center">En proceso</th>
                        <th scope="col" style="text-align:center">En estado Cerrado</th>
                    </tr>
                </thead>
                <tbody>
                    <%  @datos_accion_generales.each do |dat| %>
                        
                        <tr>
                            <% if dat[0].to_s == 'ACCIONES PREVENTIVAS'  %>
                                <td style="border:1px solid black; text-align:center; background-color:#038018"> ACCIONES PREVENTIVAS</td>
                            <% end  %>    
                            <% if dat[0].to_s == 'ACCIONES DE MEJORA'  %>
                                <td style="border:1px solid black; text-align:center; background-color:#F0E835"> ACCIONES DE MEJORA </td>
                            <% end  %>    
                        
                            <% if dat[0].to_s == 'ACCIONES CORRECTIVAS'  %>
                                <td style="border:1px solid black; text-align:center; background-color:#F03553">ACCIONES CORRECTIVAS</td>
                            <% end  %>    
                            <td style="text-align:center"><%= dat[1] %></td>
                            <td style="text-align:center"><%= dat[2] %></td>
                            <td style="text-align:center"><%= dat[3] %></td>
                            <td style="text-align:center"><%= dat[4] %></td>
                           
                        </tr> 

                    <% end %>
                    <tr>
                        <td colspan="2"; style="text-align:center">Total</td>
                        <td style="text-align:center"><%= @total %></td>
                    </tr>
                </tbody>
            </table>
        </div>        
        <div class="col-sm-6">
            <%= column_chart  @datos_accion, title: "Indicador Tipo de Acción", download: {filename: "Accion"}, download: {background: "#FFFFFF"}, xtitle: "Tipo de acción", ytitle: "Cantidad", prefix: "Cantidad: " if @datos_accion.present? %>
        </div>        

    </div>  
    <hr>
    <div>
         <h4 style="text-align:center">Indicador Estado de las Acciones Detallado</h4>
         <hr>
    </div>
    <div class="row g-3">
      
        <div class="col-sm-4">
            <%= column_chart  @datos_0, title: "Acciones Preventivas", download: {filename: "Preventivas"}, download: {background: "#FFFFFF"}, xtitle: "Estado Acciones Preventivas", ytitle: "Cantidad", prefix: "Cantidad: ", colors: ["#038018"] if @datos_0.present? %>
        </div>        
        <div class="col-sm-4">
            <%= column_chart  @datos_1, title: "Acciones de Mejora", download: {filename: "Mejora"}, download: {background: "#FFFFFF"}, xtitle: "Estado Acciones de Mejora", ytitle: "Cantidad", prefix: "Cantidad: ", colors: ["#F0E835"] if @datos_1.present? %>
        </div>        
        <div class="col-sm-4">
            <%= column_chart  @datos_2, title: "Acciones Correctivas", download: {filename: "Correctivas"}, download: {background: "#FFFFFF"}, xtitle: "Estado Acciones Correctivas", ytitle: "Cantidad", prefix: "Cantidad: ", colors: ["#F03553"] if @datos_2.present? %>
        </div>        


    </div>  
    <hr>
    



</div>  




<% if @entity.present? %>
    <h2><%= @entity.business_name %> Nit: <%= EvaluationRuleDetail.miles(@entity.identification_number) if @entity.identification_number.present? %>-<%= @entity.verification_digit if @entity.verification_digit.present? %></h2>
<% end %>
<%= link_to "Crear Gestión del cambio", new_change_management_path, class: 'btn btn-sm btn-primary' if Current.user.level > 0 &&  Current.user.level < 4 %> 
 
<div class="container col-11">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Fecha</th>
                <th scope="col">Área</th>
                <th scope="col">Usuario elaboró</th>
                <th scope="col">Crear planeación</th>
                <th scope="col">Firmar</th>
                <th scope="col">Ver</th>
                <th scope="col"><%= t('common.edit') %></th>
                <th scope="col">PDF</th>
            </tr>
        </thead> 
        <tbody>
            <% @change_managements.each do |change_management| %>
                <tr>  
                    <td scope="col"><%= change_management.date_change.strftime("%F") if change_management.date_change.present? %></td>  
                    <td scope="col"><%= ChangeManagement.label_area(change_management.code_area)  %></td>  
                    <td scope="col"><%= ChangeManagement.label_user(change_management.user_elaborated) %></td>
                    <td scope="col"><%= link_to 'Crear planeación', crear_item_paso_cambio_path(change_management), class: 'btn btn-sm btn-warning' if Current.user.level > 0 && Current.user.level < 3 %></td>
                    <% if change_management.firm_user_elaborated == 0 %>
                        <td scope="col"><%= link_to 'Firmar', firma_analisis_cambio_path(change_management), class: 'btn btn-sm btn-warning'%></td>
                    <% else %>
                        <td scope="col"><%= change_management.date_user_elaborated.strftime("%F") if change_management.date_user_elaborated.present? %>
                    <% end %>
                    <td scope="col"><%= link_to 'Ver', change_management_path(change_management), class: 'btn btn-sm btn-primary'%></td>
                    <td scope="col"><%= link_to 'Editar', edit_change_management_path(change_management.id), class: 'btn btn-sm btn-warning' if Current.user.level > 0 && Current.user.level < 3 %></td>
                    <td scope="col"><%= link_to "PDF", ver_analysis_cambio_path(change_management.id, format: 'pdf'), class: 'btn btn-sm btn-success' %></td>
                </tr>
            <% end %>  
        </tbody>      
    </table>
    </br>        
</div>




<head>
    <meta charset='utf-8' />
</head>

<div class="container col-12 card p-5">
    <table style="width: 100%;border:0px solid black"> 
        <tr>
            <td rowspan="2" style="border:1px solid black; width: 20%; text-align:center">
                <% if @entity.logo.present? then %>
                    <%= image_tag(Evaluation.wicked_blob_path(@entity.logo),:width => "100",  :height=>"100") %>
                <% end %>   
            </td>
            <td style="border:1px solid black; text-align:center">
                <div class="col-10"><%= @entity.business_name if @entity.present? %></div>
            </td>
        </tr>
        <tr>    
            <td style="border:1px solid black; text-align:center">
                <div class="col-10"><%= @template.name if @template.present? %></div>
            </td>
        </tr>
    </table>
    <table style="width: 100%;">
        <tr>    
            <td style="border:1px solid black; width: 25%">
                CÓDIGO:                 
            </td>
            <td style="border:1px solid black; width: 25%">
                &nbsp;&nbsp;<small class="text-muted"><%= @template.reference if @template.present? %></small>                
            </td>

            <td style="border:1px solid black; width: 25%">
                VERSIÓN:                 
            </td>
            <td style="border:1px solid black; width: 25%">
                &nbsp;&nbsp;<small class="text-muted"><%= @template.version if @template.present? %></small>                
            </td>
        </tr>
        <tr>    
            <td style="border:1px solid black; width: 25%">
                FECHA DE ELABORACIÓN:                 
            </td>
            <td style="border:1px solid black; width: 25%">
                &nbsp;&nbsp;<small class="text-muted"><%= @template.date if @template.present? %></small>                
            </td>

            <td style="border:1px solid black; width: 25%">
                FECHA DE ACTUALIZACIÓN:                 
            </td>
            <td style="border:1px solid black; width: 25%">
                &nbsp;&nbsp;<small class="text-muted"><%= @template.date_updated if @template.present? %></small>                
            </td>
        </tr>
    </table>

    <br> 
        <table style="width: 100%;">
            <tr>    
                <td style="width: 30%;border:1px solid black;">
                    <strong>TÍTULO:</strong>               
                </td>
                <td style="width: 70%;border:1px solid black;">
                    <%=  @lesson.title if @lesson.present? %>                              
                </td>
            </tr>
        </table>
        <table style="width: 100%;">
            <tr style="background-color: #00aae4;">    
                <td style="width: 100%;border:1px solid black;">
                    <strong>¿QUÉ SUCEDIÓ?</strong>               
                </td>
            </tr>
            <tr>    
                <td style="width: 100%;border:1px solid black;">
                    <%=  @lesson.leccion_que if @lesson.present? %>               
                </td>
            </tr>
            <tr style="background-color: #00aae4;">    
                <td style="width: 100%;border:1px solid black;">
                    <strong>CAUSAS ORIGINADORAS DEL EVENTO:</strong>               
                </td>
            </tr>
            <tr>    
                <td style="width: 100%;border:1px solid black;">
                    <%=  @lesson.leccion_causa if @lesson.present? %>  
                </td>
            </tr>
            <tr style="background-color: #00aae4;">    
                <td style="width: 100%;border:1px solid black;">
                    <strong>RECOMENDACIONES:</strong>               
                </td>
            </tr>
            <tr>    
                <td style="width: 100%;border:1px solid black;">
                    <%=  @lesson.leccion_recome if @lesson.present? %>
                </td>
            </tr>
        </table> 
        <div></br></div>
        <table style="width: 100%;">
            <tr>

                <td style="border:0px solid black; width: 40%;">
                    <div class="row"> 
                        <div class="col-12">
                            <div>Elaboró:</div>
                            <div>&nbsp;</div>
                            <div>&nbsp;</div>
                            <% if @user_responsable.present? %>
                                <% if @lesson.firm_user_adviser_sst == 1 %>
                                    <% if @user_responsable.firm.attached? %>
                                        <% if @user_responsable.firm.image? %> 
                                            <%= image_tag @user_responsable.firm, class: "firmapdf" %>
                                            <p>________________________________</p>
                                        <% else %>
                                            <p>________________________________</p>
                                        <% end %>
                                    <% else %>
                                        <p>________________________________</p>
                                    <% end %>
                                <% else %>
                                    <p>________________________________</p>
                                <% end %>
                            <% else %>    
                                <p>________________________________</p>
                            <% end %>     
                        </div>
                       <div class="col-12">
                            <div class="row">
                                <strong><%= @user_responsable.name if @user_responsable.present? %></strong>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                 Asesor externo SG-SST
                            </div>
                        </div>
                    </div>
                    <br>
                </td>
                <td style="border:0px solid black; width: 40%;">
                    <div class="row"> 
                        <div class="col-12">
                            <div></div>
                            <div>&nbsp;</div>
                            <div>&nbsp;</div>
                            <% if @user_vigia.present? %>
                                <% if @lesson.firm_user_vigia == 1 %>
                                    <% if @user_vigia.firm.attached? %>
                                        <% if @user_vigia.firm.image? %> 
                                            <%= image_tag @user_vigia.firm, class: "firmapdf" %>
                                            <p>________________________________</p>
                                        <% else %>
                                            <p>________________________________</p>
                                        <% end %>
                                    <% else %>
                                        <p>________________________________</p>
                                    <% end %>
                                <% else %>
                                    <p>________________________________</p>
                                <% end %>
                            <% else %>    
                                <p>________________________________</p>
                             <% end %>     
                        </div>
                       <div class="col-12">
                            <div class="row">
                                <strong><%= @user_vigia.name if @user_vigia.present? %></strong>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                Responsable de SG-SST
                            </div>
                        </div>
                    </div>
                    <br>
                </td>
            </tr>
        </table>
         
         <div></br></div>
</div>        

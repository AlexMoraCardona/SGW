<div class="container col-12 card p-5">
    <br> 
    <%= form_with model: @lesson do |form| %>
        <% @lesson.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %> 
        <table style="width: 100%;">
            <tr style="background-color: #00aae4;">    
                <td style="width: 100%;border:1px solid black;">
                    <strong>TÍTULO</strong>               
                </td>
            </tr>
            <tr>    
                <td style="width: 100%;border:1px solid black;">
                    <%= form.text_field :title,  class: "form-control" %>               
                </td>
            </tr>
            <tr style="background-color: #00aae4;">    
                <td style="width: 100%;border:1px solid black;">
                    <strong>¿QUÉ SUCEDIÓ?</strong>               
                </td>
            </tr>
            <tr>    
                <td style="width: 100%;border:1px solid black;">
                    <%= form.rich_text_area :leccion_que,  class: "form-control" %>               
                </td>
            </tr>
            <tr style="background-color: #00aae4;">    
                <td style="width: 100%;border:1px solid black;">
                    <strong>CAUSAS ORIGINADORAS DEL EVENTO:</strong>               
                </td>
            </tr>
            <tr>    
                <td style="width: 100%;border:1px solid black;">
                    <%= form.rich_text_area :leccion_causa,  class: "form-control" %>               
                </td>
            </tr>
            <tr style="background-color: #00aae4;">    
                <td style="width: 100%;border:1px solid black;">
                    <strong>RECOMENDACIONES:</strong>               
                </td>
            </tr>
            <tr>    
                <td style="width: 100%;border:1px solid black;">
                    <%= form.rich_text_area :leccion_recome,  class: "form-control" %>               
                </td>
            </tr>
        </table> 
        <table style="width: 100%;">
            <tr>    
                <td style="width: 30%;border:1px solid black;">
                    <strong>Vigía: </strong>              
                </td>
                <td style="width: 70%;border:1px solid black;">
                    <%= form.collection_select :user_vigia, User.usuarios_empresa.order(id: :asc), :id,  :name, style: "width=50px" %>
                </td>
            </tr>
        </table>
       </br> 
        <%= form.hidden_field :user_id, :value => Current.user.id, class: "form-control" if Current.user.present? %>
        <%= form.hidden_field :user_adviser_sst, :value => Current.user.id, class: "form-control" if Current.user.present? %>
        <%= form.hidden_field :entity_id, :value => @entity.id, class: "form-control" if @entity.present? %>

        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, :back %>
    <% end %>
</div>        
<br>

 
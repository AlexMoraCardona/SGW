<br>
<div class="container col-11"> 
    <div>
        <h3 style="text-align:center">Indicadores Matriz Legal</h3>
        <h3 style="text-align:center"><%= @entity.business_name %>  Nit:<%= @entity.identification_number %></h3>
    </div> 

    <hr>
    
    <div>
         <h4>Indicador Cumplimiento Requisitos Legales</h4>
         <hr>
    </div>

    
    <div class="row g-2">
        <div class="col-sm-5">
            <table  class="table" >
                <thead>
                    <tr>
                        <th colspan="3"; style="text-align:center">Cumplimiento Requisitos Legales</th>
                    </tr>
                    <tr>
                        <th scope="col" style="text-align:center">Estado</th>
                        <th scope="col" style="text-align:center">Cantidad</th>
                    </tr>
                </thead>
                <tbody>
                    <%  @datos_cumplimiento.each do |dat| %>
                        
                        <tr>
                            <% if dat[0].to_s == 'NO (0%)'  %>
                                <td style="border:1px solid black; text-align:center; background-color:#F03553"> NO (0%)</td>
                            <% end  %>    
                            <% if dat[0].to_s == 'PARCIAL (50%)'  %>
                                <td style="border:1px solid black; text-align:center; background-color:#F0E835"> PARCIAL (50%) </td>
                            <% end  %>    
                        
                            <% if dat[0].to_s == 'SI (100%)'  %>
                                <td style="border:1px solid black; text-align:center; background-color:#038018">SI (100%)</td>
                            <% end  %>    
   
                            <td style="text-align:center"><%= dat[1] %></td>
                        </tr>    
                    <% end %>
                    <tr>
                        <td colspan="2"; style="text-align:center">Total</td>
                        <td style="text-align:center"><%= @total %></td>
                    </tr>
                </tbody>
            </table>
        </div>        
        <div class="col-sm-5">
            <%= column_chart  @datos_cumplimiento, title: "Indicador Cumplimiento", download: {filename: "Cumplimiento"}, download: {background: "#FFFFFF"}, xtitle: "Nivel de cumplimiento", ytitle: "Cantidad", prefix: "Cantidad: " if @datos_cumplimiento.present? %>
        </div>        

    </div>  
    <hr>
    
</div>  




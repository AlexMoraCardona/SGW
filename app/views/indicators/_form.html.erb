<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @indicator do |form| %>
        <% @indicator.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :description, style: "display: block" %>
            <%= form.text_field :description,  class: "form-control" %>
        </div>


        <div class="form-group">    
            <%= form.label :cycle_id, style: "display: block" %>
            <%= form.text_field :cycle_id,  class: "form-control" %>
        </div>
        
        

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, indicators_path %>
    <% end %>
</div> 
<br>
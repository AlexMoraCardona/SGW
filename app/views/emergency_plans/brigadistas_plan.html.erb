<div class="container col-12 card p-5">
    <br>
    <%= form_with model: @brigadista_plan do |form| %>
        <% @brigadista_plan.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>  
     
        <div class="form-group"> 
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingrese el nombre del Brigadista.">Nombre del Brigadiasta: <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
            <%= form.text_field :name_brigadista,  class: "form-control" %>
        </div>
        </br>    
        <div class="form-group"> 
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingrese el perfil del Brigadista.">Perfil del Brigadiasta: <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
            <%= form.text_field :perfil_brigadista,  class: "form-control" %>
        </div>
        </br>    
        <%= form.hidden_field :emergency_plan_id, :value => params[:id].to_i, class: "form-control" %>
        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
    <% end %>

</div>
<br>

<div class="container col-12 card p-5">
    <hr>
    <br>
    <div class="d-flex">
        <div class="container">
            <h class="display-6">Brigadistas</h>
        </div> 
    </div>
    <hr>
            
    <% if @brigadista_plans.present? %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre del Brigadista</th>
                    <th scope="col">Perfil</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                <% @brigadista_plans.where("emergency_plan_id = ?",params[:id].to_i).each do |brigadista_plan| %>
                    <tr>
                        <td><%= brigadista_plan.id %></td>
                        <td><%= brigadista_plan.name_brigadista %></td>
                        <td><%= brigadista_plan.perfil_brigadista %></td>
                        <td><%= link_to t('common.edit'), edit_brigadista_plan_path(brigadista_plan), class: 'btn btn-xs btn-primary'  %></td>
                        <td><%= link_to t('common.delete'), brigadista_plan, data: { 'turbo-method': :delete, 'turbo-confirm': 'EstÃ¡ seguro de eliminar el brigadista?' }, class: 'btn btn-xs btn-danger' %></td>
                    </tr>
                <% end %>     
            </tbody>      
        </table>
    <% end %>     
</div>
        
<br>
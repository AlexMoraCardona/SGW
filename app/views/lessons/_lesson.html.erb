<% if @entity.present? %>
    <h2><%= @entity.business_name %> Nit: <%= EvaluationRuleDetail.miles(@entity.identification_number) if @entity.identification_number.present? %>-<%= @entity.verification_digit if @entity.verification_digit.present? %></h2>
<% end %>
<%= link_to "Crear lección", new_lesson_path, class: 'btn btn-sm btn-primary' if Current.user.level > 0 &&  Current.user.level < 3 %> 
 
<div class="container col-11">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Fecha</th>
                <th scope="col">Título</th>
                <th scope="col">Ver</th>
                <th scope="col"><%= t('common.edit') %></th>
                <th scope="col"><%= t('common.delete') %></th>
                <th scope="col">PDF</th>
            </tr>
        </thead> 
        <tbody>
            <% @lessons.each do |lesson| %>
                <tr> 
                    <td scope="col"><%= lesson.created_at.strftime("%F") if lesson.created_at.present? %></td>  
                    <td scope="col"><%= lesson.title %></td>  
                    <td scope="col"><%= link_to 'Ver', lesson_path(lesson), class: 'btn btn-sm btn-primary'%></td>
                    <td scope="col"><%= link_to 'Editar', edit_lesson_path(lesson.id), class: 'btn btn-sm btn-warning' if Current.user.level > 0 &&  Current.user.level < 3 %></td>
                    <td scope="col"><%= button_to 'Delete', lesson, method: :delete, class:'btn btn-sm btn-danger' if Current.user.level > 0 &&  Current.user.level < 3 %></td>
                    <td scope="col"><%= link_to "PDF", ver_leccion_path(lesson.id, format: 'pdf'), class: 'btn btn-sm btn-success' %></td>
                </tr>
            <% end %>  
        </tbody>      
    </table>
    </br>        
</div>




<div align="left"; class="container col-12">
    <a class="navbar-brand" href="/">
        <%= image_tag 'LogoConesst202305232.png',:width => "100",  :height=>"100" %>
    </a>
</div>
<div class="container col-11">
        <div class="d-flex"> 
            <div class="container">
               <h2 class="display-5"> Contenido Multimedia</h2>
            </div> 
        </div>

        <table class="table table-hover">
            <tbody> 
                <% @contents.each do |content| %> 
                <tr> 
                    <td>Clasificación:<br>
                        <%= content.clasification %><br>
                        Título:<br>
                        <%= content.title %><br>
                        Visto:<br>
                        <% if @vistas.find_by(presentation: content.id, type_presentation: 1).present?  %>
                            <div> 
                                <%= image_tag("caritafeliz.png", class: "carita-mini") %>
                            </div> 
                        <% else %>  
                            <div>  
                                <%= link_to "Registrar Vista", registrar_vista_path(id: content.id, type: 1), class: 'btn btn-sm btn-light' %>                        
                            </div>
                        <% end %>
                    </td>
                    <td>    
                        <section class="video-embed" style="width:200px; height: 200px;" >
                            <iframe  width="300" height="200" src="<%= content.link %>" title="QUE ES SST" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen>
                            </iframe>
                        </section> 
                    </td>
                 </tr>
             <% end %>     
        </tbody>      
    </table>        
</div>

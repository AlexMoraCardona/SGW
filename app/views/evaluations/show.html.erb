<br>
<div class="container col-11"> 
    <div class="row g-2">
        <div class="col-sm-10"> 
            <h2 class="display-5"><%= t('.title')%> Nro: <%= @evaluation.id  %></h2>
            <%= link_to 'Exportar a excel', evaluation_path(@evaluation, @evaluation_items, format: :xlsx), class: 'btn btn-success' %>

        </div>         
        <div class="col-sm-1">
            <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, evaluations_path %>
        </div> 
        <hr>
    </div>            
</div>  

<div class="container col-11">
    <br>
        <div class="row g-3">
            <div class="col-sm-5">
                <strong><%= t('.entity') %></strong>
                <%= @evaluation.entity.business_name %> 
            </div>        
            <div class="col-sm-3">
               <strong><%= t('.date_evaluation') %></strong>
               <%= @evaluation.date_evaluation %>
            </div>        
        </div>   
        
        <div class="row g-3">
            <div class="col-sm-3">
                <strong><%= t('.number_employees') %></strong>
                <%= @evaluation.number_employees %>
            </div>        
            <div class="col-sm-6">
                <strong><%= t('.risk_level') %></strong>
                <%= @evaluation.risk_level.name %> 
            </div>        
        </div>  

        <div class="form-group">    
            <strong><%= t('.rule') %></strong>
            <%= @evaluation.rule.name %>
        </div>

        <div class="row g-3">
            <div class="col-sm-4">
               <strong><%= t('.score') %></strong>
               <%= @evaluation.score %>
            </div>        
            <div class="col-sm-4">
                <strong><%= t('.percentage') %></strong>
                <%= @evaluation.percentage %>
            </div>        
            <div class="col-sm-4">
                <strong><%= t('.result') %></strong>
                <% if @evaluation.result.to_s == 'ACEPTABLE'  %>
                    <div style="color:#008000";><%= @evaluation.result %> </div>
                <% end  %>    
                <% if @evaluation.result.to_s == 'MODERADAMENTE ACEPTABLE'  %>
                    <div style="color:#FFF00";><%= @evaluation.result %> </div>
                <% end  %>    
                <% if @evaluation.result.to_s == 'CRÍTICO'  %>
                    <div style="color:#FF0000";><%= @evaluation.result %> </div>
                <% end  %>    

            </div>        
        </div>  

        <div class="form-group">    
            <strong><%= t('.observation') %></strong>
            <%= @evaluation.observation %>
        </div>
        <br>
 

        <div class="row g-3">
            <div class="col-sm-5">
                <%= column_chart  @evaluation.calculo_porcentaje_ciclo(@evaluation.id), title: "Porcentaje de cumplimiento por ciclo", download: {filename: "GraficaCiclo"}, download: {background: "#FFFFFF"}, xtitle: "Ciclo", ytitle: "Porcentaje", prefix: "Porcentaje: ", suffix: "%" if @evaluation.present? %>
            </div>           
            <div class="col-sm-3">
                <%= column_chart  @evaluation.calculo_cumplidos_evaluacion(@evaluation.id), colors: ["#008000"], title: "Items cumplidos por ciclo", download: {filename: "GraficaCiclo"}, download: {background: "#FFFFFF"}, xtitle: "Ciclo", ytitle: "Items cumplidos" if @evaluation.present? %>
            </div>           
            <div class="col-sm-3">
                <%= column_chart  @evaluation.calculo_pendientes_evaluacion(@evaluation.id), colors: ["#b00"], title: "Items pendientes por ciclo", download: {filename: "GraficaCiclo"}, download: {background: "#FFFFFF"}, xtitle: "Ciclo", ytitle: "Items pendientes" if @evaluation.present? %>
            </div>           
        </div>           

       
</div>    
<br>
<div class="container col-11" 
    <br>
    <h2 class="display-5"><%= t('.title_detail') %></h2> 


    <hr>
</div> 



<br>  

<div class="container col-11"> 
    <table class="table table-hover">
        <thead>
            <tr> 
                <th scope="col">Ciclo</th>
                <th scope="col">Item</th>
                <th scope="col">Descripción</th>
                <th scope="col"><%= t('.meets') %></th>
                <th scope="col">Puntaje</th>
                <th scope="col">Criterio</th> 
                <th scope="col">Ver</th> 
            </tr>
        </thead>  
        <tbody>
            <%= render partial: 'evaluation_items', collection: @evaluation_items %>  

        </tbody>   
 
    </table>
    <br>

    <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, evaluations_path %>
    
</div>  









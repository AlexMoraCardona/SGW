<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @working_condition_item do |form| %>
        <% @working_condition_item.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    

        <div> 
            <div>Tipo de Riesgo: <%= @working_condition_item.clasification_danger.name %></div>
            <div>Descripción del Peligro o Riesgo: <%= @working_condition_item.clasification_danger_detail.name %></div>
            <div>Posibles Riesgos y Consecuencias: <%= DangerDetailRisk.label_risk(@working_condition_item.clasification_danger_detail_id) %></div>
            <div>Sugerencia de medidas de prevención y control: <%= DangerPrevention.label_prevention(@working_condition_item.clasification_danger_detail_id) %></div>
        </div>
        <hr>
        <div class="row g-2">
            <div class="col-sm-5">
                <%= form.label :exposed,  style: "display: block" %>
                <%= form.radio_button :exposed, 0 %>
                <label for="No">NO</label>
                <%= form.radio_button :exposed, 1 %>
                <label for="Si">SI</label>
            </div>
        </div>        
        <br>

        <div class="form-group">    
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingresar observaciones."><%= t('.observation') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
            <%= form.text_field :observation,  class: "form-control" %>
        </div>

        <hr>
        <div class="row g-2"> 
            <div class="col-sm-6">
                <%= form.label :user_intervention,  style: "display: block" %>
                <%= form.collection_select :user_intervention, User.all.order(id: :asc), :id,  :name, style: "width=50px" %>
            </div>  
            <div class="col-sm-5">
                <%= form.label :intervention,  style: "display: block" %>
                <%= form.radio_button :intervention, 0 %>
                <label for="No">NO</label>
                <%= form.radio_button :intervention, 1 %>
                <label for="Si">SI</label>
            </div>
        </div>  
        <br>  
        <div class="row g-2"> 
            <div class="col-sm-6">
                <%= form.label :date_intervention,  style: "display: block" %>
                <%= form.date_field :date_intervention,  class: "form-control" %>
            </div>  
            <div class="col-sm-5">
                <%= form.label :observation_intervention,  style: "display: block" %>
                <%= form.text_field :observation_intervention,  class: "form-control" %>
            </div>
        </div>  
        <br>  

        <div class="form-group">   
            <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        </div>    
    <% end %>
    <hr>
</div>        

<!-- render 'shared/header2' -->
<br>
<div class="container col-11">
        <div class="d-flex">
            <div class="container">
               <h2 class="display-5"> <%= t('.title')%></h2>
            </div>
        </div>
        <div class="container">
            <%= link_to t('.create_template'), new_template_path, class: 'btn btn-sm btn-primary'  %> 
        </div>
        <hr>

        <%= search_form_for @q do |f| %>
            <%= f.label :format_number_eq %>
            <%= f.number_field :format_number_eq %>

            <%= f.label :name_cont %>
            <%= f.search_field :name_cont %>
            <button type="submit" class="btn btn-sm btn-primary">Buscar</button>
        <% end %>
    </br>        
    <%== pagy_info(@pagy) %>
    <%== pagy_bootstrap_combo_nav_js(@pagy) %>

    <table class="table table-hover">
        <thead> 
            <tr>
                <th scope="col"><%= sort_link(@q, :format_number, default_order: :desc)  %></th>
                <th scope="col"><%= sort_link(@q, :name, default_order: :desc) %></th>
                <th scope="col"><%= sort_link(@q, :date, default_order: :desc) %></th>
                <th scope="col"><%= sort_link(@q, :date_updated, default_order: :desc) %></th>
                <th scope="col"><%= sort_link(@q, :version, default_order: :desc) %></th>
                <th scope="col"><%= sort_link(@q, :state, default_order: :desc) %></th>
                <th scope="col"><%= sort_link(@q, :standar_detail_item_id, default_order: :desc) %></th>
                <th scope="col"><%= sort_link(@q, :reference, default_order: :desc) %></th>
                <th scope="col"><%= t('.description') %></th>
                <th scope="col"><%= t('common.edit') %></th>
            </tr>
        </thead>
        <tbody>
            <%= render partial: 'template', collection: @templates  %>  
        </tbody>      
    </table>
    </br>        
    <%== pagy_info(@pagy) %>
    <%== pagy_bootstrap_combo_nav_js(@pagy) %>
    </br>
</div>
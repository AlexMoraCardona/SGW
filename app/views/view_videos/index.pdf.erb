<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
    <meta charset='utf-8' />
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
    <%= wicked_pdf_stylesheet_link_tag 'pdf' %>
    <%= javascript_importmap_tags %>
</head>


<table style="border:0px solid black;width: 100%;">
    <tr>
        <td rowspan="2" style="border:1px solid black; width: 20%; text-align:center">
            <% if @entity.logo.present? then %>
                <%=  image_tag  @entity.logo, class: "image_peq" %>
            <% end %>   
        </td>
        <td style="border:1px solid black; text-align:center">
            <div class="col-10"><div style="text-transform:uppercase;"><%= @entity.business_name if @entity.present? %></div></div>
        </td>
    </tr>
    <tr>    
        <td style="border:1px solid black; text-align:center">
            <div class="col-10"><div><%= @template.name if @template.present? %></div></div>
        </td>
    </tr>
</table>
    <table style="border:0px solid black;width: 100%;">
        <tr>    
            <td style="border:1px solid black; width: 25%;">
                <div>CÓDIGO: </div>                
            </td>
            <td style="border:1px solid black; width: 25%;">
                <div>&nbsp;&nbsp;<small class="text-muted"><%= @template.reference if @template.present? %></small></div>                
            </td>

            <td style="border:1px solid black; width: 25%;">
                <div>VERSIÓN: </div>                
            </td>
            <td style="border:1px solid black; width: 25%;">
                <div>&nbsp;&nbsp;<small class="text-muted"><%= @template.version if @template.present? %></small></div>                
            </td>
        </tr>
        <tr>    
            <td style="border:1px solid black; width: 25%;">
                <div>FECHA DE ELABORACIÓN: </div>                
            </td>
            <td style="border:1px solid black; width: 25%;">
                <div>&nbsp;&nbsp;<small class="text-muted"><%= @template.date if @template.present? %></small></div>                
            </td>

            <td style="border:1px solid black; width: 25%;">
                <div>FECHA DE ACTUALIZACIÓN: </div>                
            </td>
            <td style="border:1px solid black; width: 25%;">
                <div>&nbsp;&nbsp;<small class="text-muted"><%= @template.date_updated if @template.present? %></small></div>                
            </td>
        </tr>
    </table>


    <div class="container col-11">
        <div class="d-flex">
            <div class="container">
               <h2 class="display-5"> <%= t('.title')%></h2>
            </div>
        </div>
        <hr>
    </br>        
    <table style="border:0px solid black;width: 100%;">
        <thead> 
            <tr>
                <td style="border:1px solid black; width: 20%;"><strong>Fecha de vista</strong></td>
                <td style="border:1px solid black; width: 30%;"><strong>Video o presentación</strong></td>
                <td style="border:1px solid black; width: 30%;"><strong>Nombre empleado</strong></td>
                <td style="border:1px solid black; width: 20%;"><strong><%= t('.type_presentation') %></strong></td>
             </tr>
        </thead>
        <tbody>
            <% @view_videos.each do |view_video| %>             
                <tr>
                    <td style="border:1px solid black; width: 20%;"><%= view_video.date_view %></td>
                    <td style="border:1px solid black; width: 30%;"><%= view_video.name_view %></td>
                    <td style="border:1px solid black; width: 30%;"><%= view_video.user.name %></td>
                    <td style="border:1px solid black; width: 20%;"><%= ViewVideo.label_type(view_video.type_presentation) %></td>
                </tr>
            <% end %>         
        </tbody>      
    </table>
    </br>        
</div>
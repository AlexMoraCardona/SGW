<div class="container col-3">
    <br>
    <h2><%=t('.title')%></h2>
    <%= form_with model: @user do |form| %>
        <% @user.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>

        <div class="form-group">    
            <%= form.label :nro_document,  style: "display: block" %>
             <%= form.text_field :nro_document,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :name,  style: "display: block" %>
             <%= form.text_field :name,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :username,  style: "display: block" %>
             <%= form.text_field :username,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :email,  style: "display: block" %>
             <%= form.email_field :email,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :password,  style: "display: block" %>
            <%= form.password_field :password,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :avatar,  style: "display: block" %>
            <%= form.file_field :avatar,  class: "form-control", accept:"image/*", capture:"camera" %>
        </div>
 
        <br>
        <%= form.hidden_field :document_id, :value => 1, class: "form-control" %>


        <div>
            <%= form.submit value= t('common.submit')  %>
          
        </div>

    <% end %>
</div>        

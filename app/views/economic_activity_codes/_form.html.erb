<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @economic_activity_code do |form| %>
        <% @economic_activity_code.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">    
            <%= form.label :risk_class, style: "display: block" %>
            <%= form.text_field :risk_class,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :ciu_code, style: "display: block" %>
            <%= form.text_field :ciu_code,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :additional_digits, style: "display: block" %>
            <%= form.text_field :additional_digits,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :economic_activity_description, style: "display: block" %>
            <%= form.text_field :economic_activity_description,  class: "form-control" %>
        </div>

        <br>    
        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, economic_activity_codes_path %>
    <% end %>
</div>        
<br> 


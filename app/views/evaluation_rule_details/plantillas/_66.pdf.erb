    <td style="border:0px solid black;">
        <h6><%= @evidence.date if @evidence.present? %></h6>                
    </td>
</tr>
<tr>    
    <td style="border:0px solid black; width: 20%;">
        <h6>Lugar:</h6>                
    </td>
    <td style="border:0px solid black;">
        <h6><%= @evidence.place if @evidence.present? %></h6>                
    </td>
</tr>
<tr>    
    <td style="border:0px solid black; width: 20%;">
        <h6>Objetivo:</h6>                

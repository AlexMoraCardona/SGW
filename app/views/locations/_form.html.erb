<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @location do |form| %>
        <% @location.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>

        <div class="row g-2">
            <div class="col-sm-9">
                <%= form.label :name_locate,  style: "display: block" %>
                 <%= form.text_field :name_locate,  class: "form-control" %>
            </div>
            <div class="col-sm-3">
                <%= form.label :code_locate,  style: "display: block" %>
                 <%= form.text_field :code_locate,  class: "form-control" %>
            </div>
        </div>        

        <div class="row g-3">
            <div class="col-sm-4">
                 <%= form.label :phone_number_entity,  style: "display: block" %>
                 <%= form.number_field :phone_number_entity,  class: "form-control" %>
            </div> 
            <div class="col-sm-4">
                <%= form.label :cell_entity,  style: "display: block" %>
                 <%= form.number_field :cell_entity,  class: "form-control" %>
            </div> 
            <div class="col-sm-4">
                <%= form.label :number_workers,  style: "display: block" %>
                 <%= form.number_field :number_workers,  class: "form-control" %>
            </div>        
        </div>        


        <div class="row g-2">
            <div class="col-sm-6">
                <%= form.label :entity_address,  style: "display: block" %>
                 <%= form.text_field :entity_address,  class: "form-control" %>
            </div>        
            <div class="col-sm-6">
                <%= form.label :entity_zone,  style: "display: block" %>
                <%= form.radio_button :entity_zone, "Rural" %>
                <label for="entity_zone_rural"><%= t('common.rural') %></label>
                <%= form.radio_button :entity_zone, "Urbana" %>
                <label for="entity_zone_urbana"><%= t('common.urbana') %></label>
            </div> 
        </div>        

        <div class="form-group">    
                <%= form.label :entity_location_code,  style: "display: block" %>
                <%= form.collection_select :entity_location_code, AdministrativePoliticalDivision.all.order(id: :asc), :town_center_code, :town_center_name %>
        </div>  

        <%= form.hidden_field :entity_id, :value => params[:format].to_i, class: "form-control" %>


        <br>
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, entities_path %>
    <% end %>
</div>   
<br>




<div class="container col-12 card p-5">
    <br>  
    <%= form_with model: @adm_vote do |form| %>
        <% @adm_vote.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>  
        <br>
        <div class="row g-2">
            <div class="col-sm-5">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar la fecha de inicio de las votaciones."><%= t('.date_initial') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.date_field :date_initial,  class: "form-control", required: true %>
            </div>  
            <div class="col-sm-5"> 
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar la fecha final de las votaciones."><%= t('.date_final') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button> <br>          
                <%= form.date_field :date_final,  class: "form-control", required: true %>
            </div>        
        </div>   
        <br>
        <div class="row g-2">
            <div class="col-sm-5">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar el número de candidatos a participar."><%= t('.total_candidates') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.number_field :total_candidates,  class: "form-control" %>
            </div>  
            <div class="col-sm-5">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar el número máximo de votos por usuario hábil."><%= t('.votes_max') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.number_field :votes_max,  class: "form-control" %>
            </div>  
        </div>   
        <br>
        <div class="form-group">    
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar el título de la campaña electiva y fecha."><%= t('.titulo_vote') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
            <%= form.text_field :titulo_vote,  class: "form-control" %>
        </div>
        <br>    
        <div class="form-group">    
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar observaciones si se tienen."><%= t('.observation') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
            <%= form.text_field :observation,  class: "form-control" %>
        </div>

        <%= form.hidden_field :entity_id, :value => params[:entity_id].to_i, class: "form-control" if params[:entity_id].present? %>

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, :back %>
    <% end %>
</div>        
<br>

 
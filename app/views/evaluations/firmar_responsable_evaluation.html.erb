<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @evaluation do |form| %>
        <% @evaluation.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>
 
        <table>
            <tr>
                <td>
                    <h4>Responsable de la ejecución del SG-SST</h4> 
                    <%= @evaluation.name_user(@evaluation.user_responsible) %>
                </td>
            </tr>
            <tr>
                <td>
                    <h4>Firma autorizada del Responsable de la ejecución del SG-SST</h4> 
                    <%= form.radio_button :firm_responsible, 0 %>
                    <label for="no">No</label>&nbsp;&nbsp; 
                    <%= form.radio_button :firm_responsible, 1 %>
                    <label for="si">Si</label>&nbsp;&nbsp;   
                </td>
            </tr>
        </table>
        <%= form.hidden_field :date_firm_responsible, :value => Time.now, class: "form-control" %>

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, :back %>
    <% end %>
</div>        
<br>
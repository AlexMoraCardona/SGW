<br>
<div class="container col-12">
    <br>
    <div class="row g-3">
        <div class="col-sm-5">
            <strong>Entidad:</strong>
            <%= @evaluation_rule_details.first.evaluation.entity.business_name %> 
        </div>        
        <div class="col-sm-3">
           <strong>Fecha evaluación:</strong>
           <%= @evaluation_rule_details.first.evaluation.date_evaluation %>
        </div>        
    </div>   

    <div class="row g-3">
        <div class="col-sm-5">
            <strong>Número de empleados:</strong>
            <%= @evaluation_rule_details.first.evaluation.number_employees %>
        </div>        
        <div class="col-sm-3">
            <strong>Nivel de riesgo:</strong>
            <%= @evaluation_rule_details.first.evaluation.risk_level.name %> 
        </div>        
    </div>  

    <div class="form-group">    
        <strong>Norma:</strong>
        <%= @evaluation_rule_details.first.evaluation.rule.name %>
    </div>

    <div class="row g-3">
        <div class="col-sm-4">
            <strong>Puntaje Evaluación:</strong>
            <%= @evaluation_rule_details.first.evaluation.score %>
        </div>         
        <div class="col-sm-4">
            <strong>Porcentaje cumplimiento:</strong>
            <%= @evaluation_rule_details.first.evaluation.percentage %>
        </div>        
    <div class="col-sm-4">
        <strong>Resultado Evaluación:</strong>
        <% if @evaluation_rule_details.first.evaluation.result.to_s == 'ACEPTABLE'  %>
            <div style="color:#008000";><%= @evaluation_rule_details.first.evaluation.result %> </div>
        <% end  %>    
        <% if @evaluation_rule_details.first.evaluation.result.to_s == 'MODERADAMENTE ACEPTABLE'  %>
            <div style="color:#FFF00";><%= @evaluation_rule_details.first.evaluation.result %> </div>
        <% end  %>    
        <% if @evaluation_rule_details.first.evaluation.result.to_s == 'CRÍTICO'  %>
            <div style="color:#FF0000";><%= @evaluation_rule_details.first.evaluation.result %> </div>
        <% end  %>    
    </div>        

    <div class="form-group">    
        <strong>Observaciones:</strong>
        <%= @evaluation_rule_details.first.evaluation.observation %>
    </div>
    <br>
    <hr>
    <div class="row g-3">
        <div class="col-sm-5">
            <%= column_chart  @datos_generales, title: "Porcentaje de cumplimiento por ciclo", download: {filename: "GraficaCiclo"}, download: {background: "#FFFFFF"}, xtitle: "Ciclo", ytitle: "Porcentaje", prefix: "Porcentaje: ", suffix: "%" if @evaluation.present? %>
        </div>           
        <div class="col-sm-3">
            <%= column_chart  @datos_pendientes, colors: ["#008000"], title: "Items cumplidos por ciclo", download: {filename: "GraficaCiclo"}, download: {background: "#FFFFFF"}, xtitle: "Ciclo", ytitle: "Items cumplidos" if @evaluation.present? %>
        </div>           
        <div class="col-sm-3">
            <%= column_chart  @datos_pendientes, colors: ["#b00"], title: "Items pendientes por ciclo", download: {filename: "GraficaCiclo"}, download: {background: "#FFFFFF"}, xtitle: "Ciclo", ytitle: "Items pendientes" if @evaluation.present? %>
        </div>           
    </div>           


</div>        


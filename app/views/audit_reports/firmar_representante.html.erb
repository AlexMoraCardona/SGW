<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @audit_report do |form| %>
        <% @audit_report.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>

        <table>
            <tr>
                <td>
                    <h4>Representante Legal</h4> 
                    <%= @audit_report.name_user(@audit_report.user_representante) %>
                </td>
            </tr>
            <tr>
                <td>
                    <h4>Firma autorizada del Representante</h4> 
                    <%= form.radio_button :firm_representante, 0 %>
                    <label for="no">No</label>&nbsp;&nbsp; 
                    <%= form.radio_button :firm_representante, 1 %>
                    <label for="si">Si</label>&nbsp;&nbsp;   
                </td>
            </tr>
        </table>
        <%= form.hidden_field :date_firm_representante, :value => Time.now, class: "form-control" %>

        <br>    
        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, :back %>
    <% end %>
</div>        
<br>


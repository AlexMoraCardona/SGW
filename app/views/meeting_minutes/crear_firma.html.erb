<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @assistant do |form| %>
        <% @assistant.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    

        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :post, style: "display: block" %>
            <%= form.text_field :post,  class: "form-control" %>
        </div>

        <%= form.hidden_field :meeting_minute_id, :value => params[:id].to_s, class: "form-control" %>

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
    <% end %>
    <hr>
    <br>
    <br>
    <div class="d-flex">
        <div class="container">
            <h class="display-6">Asistentes que firman en esta reunión</h>
        </div> 
    </div>
    <hr>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Cargo</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <% @assistants.each do |firma| %>
                <tr>
                    <td><%= firma.name %></td>
                    <td><%= firma.post %></td>
                    <td><%= link_to t('common.edit'), edit_assistant_path(firma), class: 'btn btn-xs btn-primary'  %></td>
                    <td><%= link_to t('common.delete'), firma, data: { 'turbo-method': :delete, 'turbo-confirm': 'Está seguro de eliminar la firma?' }, class: 'btn btn-xs btn-danger' %></td>
                </tr>
            <% end %>     
        </tbody>      
    </table>
    <br>
        
</div>        
<br>
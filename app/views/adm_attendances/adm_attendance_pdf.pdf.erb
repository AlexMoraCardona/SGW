                <td style="width: 20%;"><strong>Cargo</strong></td>
                <td style="width: 20%;"><strong>√Årea</strong></td>
            </tr>
        </thead>
        <tbody>
            <% if  @attendances.present? %>
                <%  @attendances.each do |attendance| %>
                    <tr>
                        <td style="width: 40%;"><%= attendance.user.name %></td>
                        <td style="width: 20%;"><%= attendance.user.nro_document %></td>

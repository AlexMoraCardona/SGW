<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @matrix_action_item do |form| %> 
        <% @matrix_action_item.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
   
        <%= form.hidden_field :consecutive, :value => @cant.to_i, class: "form-control" %>
        <%= form.hidden_field :matrix_corrective_action_id, :value => params[:id].to_i, class: "form-control" %>
        
        <div class="row g-3">
            <div class="col-sm-3">

                <%= form.label :year,  style: "display: block" %>
                <%= form.select(:year, [['2022', 2022], ['2023', 2023], ['2024', 2024]]) %>

            </div>        
            <div class="col-sm-4">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indique el consecutivo."><%= t('.clasification_type_corrective') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.text_field :clasification_type_corrective,  class: "form-control" %>
            </div>        
            <div class="col-sm-4">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indique nombre de la sede donde se generó la acción o no conformidad."><%= t('.campus') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.collection_select :campus, @locations.order(id: :asc), :id, :name_locate, { prompt: '--Seleccionar Centro de Trabajo--' },
                { class: 'form-control input-sm select2' } %>
            </div>        
        </div>   
        <br> 
        <div class="row g-2">
            <div class="col-sm-5">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indique la fecha en la que se generó la acción o no conformidad."><%= t('.date_action_conformity') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.date_field :date_action_conformity,  class: "form-control" %>
            </div>        
            <div class="col-sm-6">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indique el área donde se generó la acción o no conformidad."><%= t('.area') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.text_field :area,  class: "form-control" %>
            </div>        
        </div>   
        <br> 
        <div class="form-group">    
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indique el origen de la acción o no conformidad, ejemplo: accidente/incidente, inspección, auditoría."><%= t('.origin_action') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button> <br>          
            <%= form.select(:origin_action, [['Accidentes o Incidentes', 0], ['Auditoría En proceso', 1], ['Inspecciones', 2]]) %>
        </div>
        <br> 
        <div class="row g-2">
            <div class="col-sm-8">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Realice una breve descripción de la acción o no conformidad."><%= t('.description_action') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.text_field :description_action,  class: "form-control" %>
            </div>        
            <div class="col-sm-3">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indique si es acción correctiva, acción preventiva o acción de mejora."><%= t('.type_corrective') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.select(:type_corrective, [['Acción Preventiva', 0], ['Acción de Mejora', 1], ['Acción Correctiva', 2]]) %>
            </div>        
        </div>   
        <br> 
        <div class="row g-3">
            <div class="col-sm-3">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indique si la acción a implementar es: inmediata, a corto, mediano o largo plazo. "><%= t('.action_implement') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.select(:action_implement, [['Inmediata', 0], ['Corto Plazo', 1], ['Mediano Plazo', 2], ['Largo Plazo', 3]]) %>
            </div>        
            <div class="col-sm-5">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar la persona responsable de realizar la acción. "><%= t('.responsible') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.text_field :responsible,  class: "form-control" %>
            </div>        
            <div class="col-sm-3">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar la fecha que se tiene planeada para realizar la acción. "><%= t('.commitment_date') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.date_field :commitment_date,  class: "form-control" %>
            </div>        
        </div>  
        <br> 
        <div class="row g-3">
            <div class="col-sm-3">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar la fecha que se tiene planeada para cerrar la acción. "><%= t('.closet_date') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.date_field :closet_date,  class: "form-control" %>
            </div>        
            <div class="col-sm-5">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar si/no se realizó la acción. "><%= t('.took_actions') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.select(:took_actions, [['No', 0], ['Si', 1]]) %>
            </div>        
            <div class="col-sm-3">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Indicar si la acción está cerrada o abierta. "><%= t('.state_actions') %> <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.select(:state_actions, [['Abierto', 0], ['En proceso', 1], ['Cerrado', 2]]) %>
            </div>        
        </div> 
        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, :back %>
    <% end %>
</div>        
<br>

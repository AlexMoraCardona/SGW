<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @rule do |form| %>
        <% @rule.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :description, style: "display: block" %>
            <%= form.text_field :description,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :creation_date, style: "display: block" %>
            <%= form.date_field :creation_date,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :date_update, style: "display: block" %>
            <%= form.date_field :date_update,  class: "form-control" %>
        </div>

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, rules_path %>
    <% end %>
</div>        
<br>
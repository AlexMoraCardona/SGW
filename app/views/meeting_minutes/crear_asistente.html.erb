<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @meeting_attendee do |form| %>
        <% @meeting_attendee.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    

        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :post, style: "display: block" %>
            <%= form.text_field :post,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :process_area, style: "display: block" %>
            <%= form.text_field :process_area,  class: "form-control" %>
        </div>

         
        <%= form.hidden_field :meeting_minute_id, :value => params[:id].to_s, class: "form-control" %>

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
    <% end %>
    <hr>
    <br>
    <div class="d-flex">
        <div class="container">
            <h class="display-6">Asistentes</h>
        </div> 
    </div>
    <hr>
            
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Cargo</th>
                <th scope="col">Área / Proceso</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <% @meeting_attendees.each do |meeting_attendee| %>
                <tr>
                    <td><%= meeting_attendee.name %></td>
                    <td><%= meeting_attendee.post %></td>
                    <td><%= meeting_attendee.process_area %></td>
                    <td><%= link_to t('common.edit'), edit_meeting_attendee_path(meeting_attendee), class: 'btn btn-xs btn-primary'  %></td>
                    <td><%= link_to t('common.delete'), meeting_attendee, data: { 'turbo-method': :delete, 'turbo-confirm': 'Está seguro de eliminar el asistente a la reunión?' }, class: 'btn btn-xs btn-danger' %></td>
                </tr>
            <% end %>     
        </tbody>      
    </table>
    

</div>        
<br>
<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @standar do |form| %>
        <% @standar.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :description, style: "display: block" %>
            <%= form.text_field :description,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :value, style: "display: block" %>
            <%= form.number_field :value,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :cycle, style: "display: block" %>
            <%= form.number_field :cycle,  class: "form-control" %>
        </div>


        <div class="form-group">    
            <%= form.label :rule_id,  style: "display: block" %>
            <%= form.collection_select :rule_id, Rule.all.order(id: :asc), :id, :name, { prompt: '--Seleccionar--' },
            { class: 'form-control input-sm select2' } %>
        </div> 


        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, standars_path %>
    <% end %>
</div>        
<br>
<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @safety_inspection do |form| %>
        <% @safety_inspection.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>

        <%= form.hidden_field :entity_id, :value => params[:entity_id].to_i, class: "form-control" if params[:entity_id].present? %>

        <br>
        <div class="form-group">    
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Seleccione el Responsable de la Inspección.">Responsable de la Inspección:<%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>
            <%= form.collection_select :user_responsible, User.all.order(id: :asc), :id,  :name, style: "width=50px" %>
        </div>
        <br>    
        <div class="row g-2">
            <div class="col-sm-4">
                <%= form.label :date_inspection, style: "display: block" %>
                <%= form.date_field :date_inspection,  class: "form-control" %>
            </div>        
        </div>  
        <br>
        <div class="form-group">    
            <%= form.label :place_inspection,  style: "display: block" %>
            <%= form.text_field :place_inspection,  class: "form-control" %>
        </div>
        <br>    
        <div class="form-group">    
            <%= form.label :area_inspection,  style: "display: block" %>
            <%= form.text_field :area_inspection,  class: "form-control" %>
        </div>
        <br>    
        <div class="form-group">    
            <%= form.label :productivity_affectation,  style: "display: block" %>
            <%= form.text_area :productivity_affectation,  class: "form-control" %>
        </div>
        <br>    
        <br>    
        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, :back %>
    <% end %>
</div>        
<br>
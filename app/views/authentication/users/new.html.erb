<div class="container col-3">
    <br>
    <h2><%=t('.title')%></h2>
    <%= form_with model: @user do |form| %>
        <% @user.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>

        <div class="form-group">    
            <%= form.label :document,  style: "display: block" %>
             <%= form.text_field :document,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :name,  style: "display: block" %>
             <%= form.text_field :name,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :username,  style: "display: block" %>
             <%= form.text_field :username,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :email,  style: "display: block" %>
             <%= form.email_field :email,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :password,  style: "display: block" %>
            <%= form.password_field :password,  class: "form-control", required: true %>
        </div>
        <br>
        <div>
            <%= form.submit value= t('common.submit')  %>
        </div>
    <% end %>
</div>        

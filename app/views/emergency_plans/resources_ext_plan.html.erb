<div class="container col-12 card p-5">
    <br>
    <%= form_with model: @res_ext_plan do |form| %>
        <% @res_ext_plan.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>  
     
        <div class="form-group"> 
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingrese el nombre del recurso con que cuenta la ciudad como soporte en determinado momento, cuando se presente una emergencia.">Nombre del recurso: <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
            <%= form.text_field :name,  class: "form-control" %>
        </div>
        </br>    
        <div class="row g-3">
            <div class="col-sm-4">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingrese el lugar.">Lugar: <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.text_field :place,  class: "form-control" %>
            </div>        
            <div class="col-sm-4">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingrese el teléfono.">Teléfono: <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.text_field :phone,  class: "form-control" %>
            </div>        
            <div class="col-sm-3">
                <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingrese la cantidad de recursos.">Cantidad: <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.text_field :cant,  class: "form-control" %>
            </div>        
        </div>  
        </br>    
        <%= form.hidden_field :emergency_plan_id, :value => params[:id].to_i, class: "form-control" %>
        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
    <% end %>

</div>
<br>

<div class="container col-12 card p-5">
    <hr>
    <br>
    <div class="d-flex">
        <div class="container">
            <h class="display-6">Recursos Externos</h>
        </div> 
    </div>
    <hr>
            
    <% if @res_ext_plans.present? %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre del recurso</th>
                    <th scope="col">Lugar</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                <% @res_ext_plans.where("emergency_plan_id = ?",params[:id].to_i).each do |res_ext_plan| %>
                    <tr>
                        <td><%= res_ext_plan.id %></td>
                        <td><%= res_ext_plan.name %></td>
                        <td><%= res_ext_plan.place %></td>
                        <td><%= res_ext_plan.phone %></td>
                        <td><%= res_ext_plan.cant %></td>
                        <td><%= link_to t('common.edit'), edit_res_ext_plan_path(res_ext_plan), class: 'btn btn-xs btn-primary'  %></td>
                        <td><%= link_to t('common.delete'), res_ext_plan, data: { 'turbo-method': :delete, 'turbo-confirm': 'Está seguro de eliminar el recurso?' }, class: 'btn btn-xs btn-danger' %></td>
                    </tr>
                <% end %>     
            </tbody>      
        </table>
    <% end %>     
</div>
        
<br>
<div align="left"; class="container col-12">
    <br> 
    <table>
        <% cont = 0 %>
        <% @assistants.each do |firm| %>
            <% cont = cont + 1 %>
            <% if cont == 1 || cont == 3 || cont == 5 || cont ==7 || cont == 9  %>
                <tr> 
                    <td style="border:0px solid black; width: 33%; text-align:center">

                        <div class="row  text-center"> 
                            <div class="col-11">
                                <div>&nbsp;</div>
                                <div>&nbsp;</div>
                                <% if firm.firm_assistant == 1 %>
                                    <% if firm.user.firm.attached? %>
                                        <% if firm.user.firm.image? %> 
                                            <div  style="padding: 0;height: 70px;display: flex;justify-content: center;align-items: flex-end;"><%= image_tag firm.user.firm, class: "firma" %></div>
                                            <p align="center">______________________</p>
                                        <% end %>
                                    <% end %>
                                <% else %>
                                    <div  style="padding: 0;height: 70px;display: flex;justify-content: center;align-items: flex-end;"></div>    
                                    <p align="center">______________________</p>
                                <% end %>     
                            </div>
                            <div class="col-11">
                                <div class="row">
                                    <h6><strong><%= firm.user.name %></strong></h6>
                                </div>
                            </div>
                            <div class="col-11">
                                <div class="row">
                                    <h6><%= firm.post %></h6>
                                </div>
                            </div>
                            <div class="col-11">
                                <div class="row">
                                    <h6><%= firm.user.document.abbreviation %>: <%= Firm.miles(firm.user.nro_document) %></h6>
                                </div>
                            </div>
                        </div>
                        <br>
                    </td>      
                    
            <% else %>    
                <td style="border:0px solid black; width: 33%; text-align:center">

                    <div class="row  text-center"> 
                        <div class="col-11">
                            <div>&nbsp;</div>
                            <div>&nbsp;</div>
                            <% if firm.firm_assistant == 1 %>
                                <% if firm.user.firm.attached? %>
                                    <% if firm.user.firm.image? %> 
                                        <div  style="padding: 0;height: 70px;display: flex;justify-content: center;align-items: flex-end;"><%= image_tag firm.user.firm, class: "firma" %></div>
                                        <p align="center">______________________</p>
                                    <% end %>
                                <% end %>
                            <% else %>  
                                <div  style="padding: 0;height: 70px;display: flex;justify-content: center;align-items: flex-end;"></div>  
                                <p align="center">______________________</p>
                            <% end %>     
                        </div>
                        <div class="col-11">
                            <div class="row">
                                <h6><strong><%= firm.user.name %></strong></h6>
                            </div>
                        </div>
                        <div class="col-11">
                            <div class="row">
                                <h6><%= firm.post %></h6>
                            </div>
                        </div>
                        <div class="col-11">
                            <div class="row">
                                <h6><%= firm.user.document.abbreviation %>: <%= Firm.miles(firm.user.nro_document) %></h6>
                            </div>
                        </div>
                    </div>
                    <br>
                </td>     
                
                </tr>
            <% end %>    
        <% end %>
        <% if cont == 0 || cont == 2 || cont == 4 || cont = 6 || cont == 8  %>
            </tr>
        <% end %>
    </table>   
</div>
 
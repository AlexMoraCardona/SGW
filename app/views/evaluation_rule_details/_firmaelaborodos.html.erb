                                <h6><%= firm.post %></h6>
                            </div>
                        </div>
                        <div class="col-11">
                            <div class="row">
                                <h6><%= firm.user.document.abbreviation %>: <%= Firm.miles(firm.user.nro_document) %></h6>
                            </div>
                        </div>
                        <% if  firm.user.id == 2 %>
                            <div class="col-11">
                                <div class="row">
                                    <h6>Licencia: 2025060173080</h6>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <br>
                <% end %>    
            <% end %>
        </td>
    </tr>
</table>

<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @standar_detail  do |form| %>
        <% @standar_detail.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    

        <div class="form-group">    
            <%= form.label :description, style: "display: block" %>
            <%= form.text_field :description,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :value, style: "display: block" %>
            <%= form.number_field :value,  class: "form-control" %>
        </div>


        <div class="form-group">    
            <%= form.label :standar_id,  style: "display: block" %>
            <%= form.collection_select :standar_id, Standar.all.order(id: :asc), :id, :name %>
        </div> 

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, standar_details_path %>
    <% end %>
</div>   
<br>     
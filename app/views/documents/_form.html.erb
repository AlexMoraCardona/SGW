<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @document do |form| %>
        <% @document.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">    
            <%= form.label :document_type, style: "display: block" %>
            <%= form.text_field :document_type,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :code, style: "display: block" %>
            <%= form.number_field :code,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :abbreviation, style: "display: block" %>
            <%= form.text_field :abbreviation,  class: "form-control" %>
        </div>

        <br>    
        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, documents_path %>
    <% end %>
</div>
<br>

 
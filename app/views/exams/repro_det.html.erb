<br>
<div class="container col-11">
        <div class="d-flex">
            <div class="container">
               <h2 class="display-5">Participantes Reprobados</h2>
            </div> 
        </div>
        <hr>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Pregunta:</th>
                <th scope="col">Respuesta del Participante:</th>
                <th scope="col">Respuesta correcta:</th>
            </tr>
        </thead>
        <tbody> 
            <% @det_repros.where("correct = ?", 0).each do |det_repro| %> 
                <tr> 
                    <td><%= det_repro.exam_question.question %></td>
                    <td><%= det_repro.answer_user %></td>
                    <td><%= det_repro.exam_question.good_answe %></td>
                 </tr>
             <% end %>     
        </tbody>      
    </table>
    <div class="form-group">    
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, :back %>
    </div>
    <br>
</div>



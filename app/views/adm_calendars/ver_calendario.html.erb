<%= stylesheet_link_tag "calendar", "data-turbo-track": "reload" %>
<div class="container">
    <h2 class="display-5">Calendario   <%= @adm_calendar.year %></h2>
</div> 
<hr>
<% m = 1 %> 
<div class="container col-12 card p-5">
    <div class="row g-3">
        
            <% while m < 13 %> 
                <div class="col-sm-4">
                    <div style="width: 300px;">
                        <% if m == 1 then %><h1>Enero</h1><% end %>
                        <% if m == 2 then %><h1>Febrero</h1><% end %>
                        <% if m == 3 then %><h1>Marzo</h1><% end %>
                        <% if m == 4 then %><h1>Abril</h1><% end %>
                        <% if m == 5 then %><h1>Mayo</h1><% end %>
                        <% if m == 6 then %><h1>Junio</h1><% end %>
                        <% if m == 7 then %><h1>Julio</h1><% end %>
                        <% if m == 8 then %><h1>Agosto</h1><% end %>
                        <% if m == 9 then %><h1>Septiembre</h1><% end %>
                        <% if m == 10 then %><h1>Octubre</h1><% end %>
                        <% if m == 11 then %><h1>Noviembre</h1><% end %>
                        <% if m == 12 then %><h1>Diciembre</h1><% end %>
     
                        <ol>
                            <li class="day-name">Lu</li>
                            <li class="day-name">Ma</li>
                            <li class="day-name">Mi</li>
                            <li class="day-name">Ju</li>
                            <li class="day-name">Vi</li>
                            <li class="day-name">Sá</li>
                            <li class="day-name">Do</li>
        
                            <% @calendars.where("month = ?", m).each do |calendar| %>  
                                <% if calendar.day == 1 then %>
                                    <% if calendar.festive == 1 then %>
                                        <% if calendar.name_day == 'lunes' then %><li style="grid-column-start: 1;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %></li><% end %>
                                        <% if calendar.name_day == 'martes' then %><li style="grid-column-start: 2;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %> </li><% end %>
                                        <% if calendar.name_day == 'miércoles' then %><li style="grid-column-start: 3;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %></li><% end %>
                                        <% if calendar.name_day == 'jueves' then %><li style="grid-column-start: 4;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %></li><% end %>
                                        <% if calendar.name_day == 'viernes' then %><li style="grid-column-start: 5;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %></li><% end %>
                                        <% if calendar.name_day == 'sábado' then %><li style="grid-column-start: 6;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %></li><% end %>
                                        <% if calendar.name_day == 'domingo' then %><li style="grid-column-start: 7;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %></li><% end %>
                                    <% else %>
                                        <% if calendar.name_day == 'lunes' then %><li style="grid-column-start: 1;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %></li><% end %>
                                        <% if calendar.name_day == 'martes' then %><li style="grid-column-start: 2;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %> </li><% end %>
                                        <% if calendar.name_day == 'miércoles' then %><li style="grid-column-start: 3;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %></li><% end %>
                                        <% if calendar.name_day == 'jueves' then %><li style="grid-column-start: 4;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %></li><% end %>
                                        <% if calendar.name_day == 'viernes' then %><li style="grid-column-start: 5;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %></li><% end %>
                                        <% if calendar.name_day == 'sábado' then %><li style="grid-column-start: 6;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %></li><% end %>
                                        <% if calendar.name_day == 'domingo' then %><li style="grid-column-start: 7;"><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %></li><% end %>
                                    <% end %>
                                <% else %>
                                    <% if calendar.festive == 1 then %>
                                        <li><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-danger'  %></li>
                                    <% else %>
                                        <li><%= link_to calendar.day, edit_calendar_path(calendar.id), class: 'btn btn-outline-primary'  %></li>
                                    <% end %>
                                <% end %>
                            <% end %>
                        </ol>
                    </div>
                </div>
                <% m = m + 1 %> 
            <% end %>
        
    </div>      
</div>






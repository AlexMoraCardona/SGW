<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
    <meta charset='utf-8' />
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
    <%= wicked_pdf_stylesheet_link_tag 'pdf' %>
    <%= javascript_importmap_tags %>
</head>

<div> 
    <table style="border:1px solid black">
        <tr>
            <td rowspan="2" style="border:1px solid black; text-align:center">
        
                <% if @meeting_minute.entity.logo.present? then %>
                    <%=  image_tag  @meeting_minute.entity.logo, class: "image_peq" %>
                <% end %>   
        
            </td>
            <td style="border:1px solid black; text-align:center; width: 80%">
                <div class="col-10"><h5><%= @meeting_minute.entity.business_name if @meeting_minute.present? %></h5></div>
            </td>
        </tr>
        <tr>    
            <td style="border:1px solid black; text-align:center; width: 80%">
                <div class="col-10"><h6>ACTA DE REUNIÓN</h6></div>
            </td>
        </tr>
    </table>
    <table>
        <tr>    
            <td style="border:1px solid black; width: 18%">
                <h6>CÓDIGO: </h6>                
            </td>
            <td style="border:1px solid black; width: 18%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @meeting_minute.code if @meeting_minute.present? %></small></h6>                
            </td>

            <td style="border:1px solid black; width: 18%">
                <h6>VERSIÓN: </h6>                
            </td>
            <td style="border:1px solid black; width: 18%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @meeting_minute.version if @meeting_minute.present? %></small></h6>                
            </td>
            <td style="border:1px solid black; width: 14%">
                <h6>PÁGINA: </h6>                
            </td>
            <td style="border:1px solid black; width: 14%">
                <h6>&nbsp;&nbsp;<small class="text-muted">Página: 1 de 1</small></h6>                
            </td>
        </tr>
    </table>
    <table>
        <tr>    
            <td style="border:1px solid black; width: 25%">
                <h6>FECHA: </h6>                
            </td>
            <td style="border:1px solid black; width: 25%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @meeting_minute.date if @meeting_minute.present? %></small></h6>                
            </td>

            <td style="border:1px solid black; width: 25%">
                <h6>Acta N°: </h6>                
            </td>
            <td style="border:1px solid black; width: 25%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @meeting_minute.record_number if @meeting_minute.present? %></small></h6>                
            </td>
        </tr>
    </table>
</div>
<div>



    <div class="row">
        <div class="col-3">
            <h5>Evaluación N°: <small class="text-muted"><%= @meeting_minute.evaluation_id if @meeting_minute.present? %></small></h5>                
        </div>
        <div class="col-3">
            <h5>Fecha evaluación: <small class="text-muted"><%= @meeting_minute.evaluation.date_evaluation if @meeting_minute.present? %></small></h5>                
        </div>
        <div class="col-5">
            <h5>Norma: <small class="text-muted"><%= @meeting_minute.evaluation.rule.name if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h5>Asesor: <small class="text-muted"><%= @meeting_minute.user.name if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h5>Área / Proceso / Comité : <small class="text-muted"><%= @meeting_minute.area_process_committee if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h5>Objetivo de la Reunión: <small class="text-muted"><%= @meeting_minute.objective_meeting if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h5>Tipo de reunión: <small class="text-muted"><%= @meeting_minute.meeting_type if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <h5>Lugar: <small class="text-muted"><%= @meeting_minute.place if @meeting_minute.present? %></small></h5>                
        </div>
        <div class="col-3">
            <h5>Hora inicio: <small class="text-muted"><%= @meeting_minute.start_time.strftime("%T")  if @meeting_minute.present? %></small></h5>                
        </div>
        <div class="col-3">
            <h5>Hora fin: <small class="text-muted"><%= @meeting_minute.end_time.strftime("%T") if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    <hr>
    <br>

    <% if @meeting_attendees.present? %>
        <%= render partial: 'asistentes'  %>   
    <% end %> 
    <br>

    <br>
    <hr>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <h class="display-6">Orden del Día:</h>
                </tr>
            </thead>
            <hr>
            <tbody>
                <tr>
                    <h5><%= @meeting_minute.order_day if @meeting_minute.present? %></h5>
                </tr>
            </tbody>      
        </table>
    </div>
    <br>
    <hr>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <h class="display-6">Temas tratados:</h>
                </tr>
            </thead>
            <hr>
            <tbody>
                <tr>
                    <h5><%= @meeting_minute.Issues if @meeting_minute.present? %></h5>
                </tr>
            </tbody>      
        </table>
    </div>
    <br>
    <hr>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <h class="display-6">Proposiciones y varios</h>
                </tr>
            </thead>
            <hr>
            <tbody>
                <tr>
                    <h5><%= @meeting_minute.miscellaneous_propositions if @meeting_minute.present? %></h5>
                </tr>
            </tbody>      
        </table>
    </div>
    <br>
    <hr>    
    <% if @meeting_commitments.present? %>
        <%= render partial: 'commitments'  %>  
    <% end %>
    <br>
    <div class="row">
        <div class="col">
            <h5>Agotada la reunión, se da por terminada siendo las: <small class="text-muted"><%= @meeting_minute.end_time.strftime("%T") if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    <div></div>
    <div class="row">
        <div class="col">
            <h5>Para constancia firman:</h5>                
        </div>
    </div>
    <br/>
    <% if @assistants.present? %> 
        <br>
        <%= render partial: 'firmantes'  %>  
    <% end %>
    <br> 
    <div class="row">
        <div class="col">
            <br>
            <h5>Elaboró: <small class="text-muted"><%= @meeting_minute.elaborated if @meeting_minute.present? %></small></h5>                
        </div>
    </div>
    
</div>
<br>


            <td style="border:1px solid black;text-align:center"><%= @provides_protection.date_firm_responsible %></td>
            <td style="border:1px solid black;text-align:center">
                <% if @provides_protection.firm_responsible == 1 %>
                    <% if @responsable.firm.attached? %>
                       <% if @responsable.firm.image? %> 
                            <%= image_tag(Evaluation.wicked_blob_path(@responsable.firm), class: "firmapdf")%>
                            <p align="center">________________________________</p>
                        <% end %>
                    <% end %>
                <% end %>    
            </td>
            <td style="background-color: white;">&nbsp;</td>
                </tr>
            </body>
    </table>

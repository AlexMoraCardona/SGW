<div align="left"; class="container col-12">
    <a class="navbar-brand" href="/">
        <%= image_tag 'LogoConesst202305232.png',:width => "100",  :height=>"100" %>
    </a>
</div>
<div class="container col-12 card p-5">
    <table style="border:0px solid black"> 
        <tr>
            <td rowspan="2" style="border:1px solid black; width: 20%;text-align:center ">
                <% if @entity.logo.present? then %>
                    <%=  image_tag  @entity.logo, class: "image_peq" %>
                <% end %>   
            </td>
            <td style="border:1px solid black;text-align:center ">
                <div class="col-10"><h6><%= @entity.business_name if @entity.present? %></h6></div>
            </td>
        </tr>
        <tr>    
            <td style="border:1px solid black;text-align:center ">
                <div class="col-10"><h6><%= @template.name if @template.present? %></h6></div>
            </td>
        </tr>
    </table>
    <table>
        <tr>    
            <td style="border:1px solid black; width: 25%">
                <h6>CÓDIGO: </h6>                
            </td>
            <td style="border:1px solid black; width: 25%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @template.reference if @template.present? %></small></h6>                
            </td>

            <td style="border:1px solid black; width: 25%">
                <h6>VERSIÓN: </h6>                
            </td>
            <td style="border:1px solid black; width: 25%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @template.version if @template.present? %></small></h6>                
            </td>
        </tr>
        <tr>    
            <td style="border:1px solid black; width: 25%">
                <h6>FECHA DE ELABORACIÓN: </h6>                
            </td>
            <td style="border:1px solid black; width: 25%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @template.date if @template.present? %></small></h6>                
            </td>

            <td style="border:1px solid black; width: 25%">
                <h6>FECHA DE ACTUALIZACIÓN: </h6>                
            </td>
            <td style="border:1px solid black; width: 25%">
                <h6>&nbsp;&nbsp;<small class="text-muted"><%= @template.date_updated if @template.present? %></small></h6>                
            </td>
        </tr>
    </table>
    <br> 

        <table style="width: 100%;">
            <tr>    
                <td style="width: 30%;border:1px solid black;padding: 10px;">
                    <strong>TIPO DE EVENTO:</strong>               
                </td>
                <td style="width: 70%;border:1px solid black;padding: 10px;">
                    <%=  InternalReport.label_type_report (@internal_report.type_report) %>                 </td>
            </tr>
            <tr>    
                <td style="width: 30%;border:1px solid black;padding: 10px;">
                    <strong>FECHA DE OCURRENCIA:</strong>               
                </td>
                <td style="width: 70%;border:1px solid black;padding: 10px;">
                    <%=  @internal_report.date_report if @internal_report.date_report.present? %>                
                </td>
            </tr>
            <tr>    
                <td style="width: 30%;border:1px solid black;padding: 10px;">
                    <strong>HORA DE OCURRENCIA:</strong>               
                </td>
                <td style="width: 70%;border:1px solid black;padding: 10px;">
                    <%=  @internal_report.time_report.strftime("%T") if @internal_report.time_report.present? %>               
                </td>
            </tr>
            <tr>    
                <td style="width: 30%;border:1px solid black;padding: 10px;">
                    <strong>LUGAR DEL INCIDENTE O ACCIDENTE:</strong>               
                </td>
                <td style="width: 70%;border:1px solid black;padding: 10px;">
                    <%=  @internal_report.place %>               
                </td>
            </tr>
            <tr>    
                <td style="width: 30%;border:1px solid black;padding: 10px;">
                    <strong>DESCRIPCIÓN DEL INCIDENTE O ACCIDENTE:</strong>               
                </td>
                <td style="width: 70%;border:1px solid black;padding: 10px;">
                     <%=  @internal_report.description %>               
                </td>
            </tr>
            <tr>    
                <td style="width: 30%;border:1px solid black;padding: 10px;">
                    <strong>NOMBRE DE LA PERSONA ACCIDENTADA:</strong>               
                </td>
                <td style="width: 70%;border:1px solid black;padding: 10px;">
                    <%=  @internal_report.name_person %>                 
                </td>
            </tr>
        </table>
        <table style="width: 100%;">
            <tr>
                <td>
                    <br>
                    <div class="form-group">
                        <h5>Archivos adjuntos:</h5>
                    </div>         
                    <hr>
                    <% if @internal_report.imagenes_reports.attached? %>
                        <div data-controller="previews" >
                            <% @internal_report.imagenes_reports.each do |file|%>
                                <br>
                                <% if file.image? %>
                                    <div>
                                        <%= image_tag file, data: {previews_target: "preview"}, class: "image_inv" %>
                                        <%= link_to "Descargar Archivo", rails_blob_path(file, disposition: 'attachment'), class: 'btn btn-sm btn-success' %>    
                                    </div> 
                                <% elsif file.video? %>
                                    <%= video_tag url_for(file), controls: "", width: "400px" %>          
                                    <%= link_to "Descargar Archivo", rails_blob_path(file, disposition: 'attachment'), class: 'btn btn-sm btn-success' %>    
                                <% elsif file.audio? %>
                                    <%= audio_tag(url_for(file), controls: "") %>          
                                <%= link_to "Descargar Archivo", rails_blob_path(file, disposition: 'attachment'), class: 'btn btn-sm btn-success' %>    
                                <% else %>
                                    <%= link_to file.filename, url_for(file) %>          
                                    <%= link_to "Descargar Archivo", rails_blob_path(file, disposition: 'attachment'), class: 'btn btn-sm btn-success' %>    
                                <% end %>
                            <% end %>  
                        </div>
                    <% end %>  
                    <hr>
                    <br>             
                </td>    
            </tr>
        </table> 

        </br> 
        <div></br></div>
    <table>
        <td style="border:0px solid black; width: 33%; text-align:center">
            <div class="row  text-center"> 
                <div class="col-11">
                    <div>Usuario que realiza el reporte:</div>
                    <div>&nbsp;</div>
                    <div>&nbsp;</div>
                            <% if @internal_report.firm_user == 1 %>
                               <% if @usuario.firm.attached? %>
                                  <% if @usuario.firm.image? %> 
                                        <div  style="padding: 0;height: 70px;display: flex;justify-content: center;align-items: flex-end;"><%= image_tag @usuario.firm, class: "firma" %></div>
                                        <p align="center">______________________</p>
                                  <% end %>
                                <% end %>
                            <% else %>    
                                <div  style="padding: 0;height: 70px;display: flex;justify-content: center;align-items: flex-end;"></div>
                                <p align="center">______________________</p>
                             <% end %>     
                        </div>
                        <div class="col-11">
                            <div class="row">
                                <h6><strong><%= @usuario.name if @usuario.present? %></strong></h6>
                            </div>
                        </div>
                        <div class="col-11">
                            <div class="row">
                                <h6><%= @usuario.cargo_rol if @usuario.present? %></h6>
                            </div>
                        </div>
                        <div class="col-11">
                            <div class="row">
                                <h6><%= @usuario.document.abbreviation if @usuario.present? %>: <%= Firm.miles(@usuario.nro_document) if @usuario.present? %></h6>
                            </div>
                        </div>
                        <% if  @usuario.present? && @usuario.level == 2  %>
                            <div class="col-11">
                                <div class="row">
                                    <h6>Licencia: <%= @usuario.license if @usuario.present? %></h6>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <br>
        </td>
    </tr>
</table>

        </br> 
         <div></br></div>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, :back %>
</div>        
<br>

 

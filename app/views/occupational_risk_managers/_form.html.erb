<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @occupational_risk_manager do |form| %>
        <% @occupational_risk_manager.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :code, style: "display: block" %>
            <%= form.number_field :code,  class: "form-control" %>
        </div>


        <div class="form-group">
            <%= form.label :condition,  style: "display: block" %>
            <%= form.radio_button :condition, false %>
            <label for="Inactivo"><%= t('common.inactivo') %></label>
            <%= form.radio_button :condition, true %>
            <label for="Activo"><%= t('common.activo') %></label>
        </div>


        <br>    
        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, occupational_risk_managers_path %>

    <% end %>
</div>  
<br>
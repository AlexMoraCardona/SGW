<br>
<div class="container col-11" 
    <br>
    <h2 class="display-5">Administración medidas de prevención y control de peligros y riesgos por parte de los trabajadores</h2>
    <hr>
    
    <br>
 
    <% if params[:entity_id].present? %>
        <%= render 'admin_extent_dangers' %> 
    <% else %>
        <%= form_with model: @entity, method: :get do |form| %>
            <div class="row g-2">
                <div class="col-sm-7">
                    <%= form.label :Entidad, style: "display: block" %>
                    <%= form.collection_select :entity_id, @entities.order(id: :asc), :id, :business_name, { prompt: '--Seleccionar Entidad--' },
                    { class: 'form-control input-sm select2' } %>
                </div>
            </div>    
            <br>    
            <button type="submit" class="btn btn-sm btn-primary">Consultar</button>
        <% end %>
    <% end %>   

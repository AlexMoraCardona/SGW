<div>

    <table class="table table-hover" style="border:1px solid black"> 
        <thead>
            <tr>
                <td rowspan="4"; style="background-color: black;">&nbsp;</td>
                <td rowspan="4"; style="border:1px solid black; text-align:center; padding-bottom: 40px;">
                    <% if @annual_work_plan.entity.logo.present? then %>
                        <%=  image_tag  @annual_work_plan.entity.logo, class: "image_peq" %>
                    <% end %>
                </td>
                <td rowspan="4"; colspan="17"; style="text-align:center; padding-bottom: 40px;">
                    <div class="col-10"><h5>PLAN ANUAL DE TRABAJO <%= @annual_work_plan.year if @annual_work_plan.present? %></h5><h6><%= @annual_work_plan.entity.business_name if @annual_work_plan.present? %> Nit: <%= @annual_work_plan.entity.identification_number if @annual_work_plan.present? %> </h6></div>
                </td>
                <td rowspan="4";  style="text-align:center"></td>

                <td colspan="2"; style="border:1px solid black">Fecha de Creación:</td>

                <td style="border:1px solid black"><%= @annual_work_plan.date_create  if @annual_work_plan.present? %></td>
                <td style="background-color: black;">&nbsp;</td>

            </tr>
            <tr> 
                <td colspan="2"; style="border:1px solid black">Fecha de Actualización:</td>
                <td style="border:1px solid black"><%= @annual_work_plan.date_update  if @annual_work_plan.present? %></td>
                <td style="background-color: black;">&nbsp;</td>
            </tr>
            <tr> 
                <td colspan="2"; style="border:1px solid black">Versión:</td>
                <td style="border:1px solid black"><%= @annual_work_plan.version if @annual_work_plan.present? %></td>
                <td style="background-color: black;">&nbsp;</td>
            </tr>
            <tr> 
                <td colspan="2"; style="border:1px solid black">Código:</td>
                <td style="border:1px solid black"><%= @annual_work_plan.code if @annual_work_plan.present? %></td>
                <td style="background-color: black;">&nbsp;</td>
            </tr>
        
            <tr>
                <td style="background-color: black;">&nbsp;</td>
                <th style="border:1px solid black">Nro</th>
                <th style="border:1px solid black">Objetivo</th>
                <th style="border:1px solid black">Meta</th>
                <th style="border:1px solid black">Actividad</th>
                <th style="border:1px solid black">Recursos</th>
                <th style="border:1px solid black">Responsable</th>
                <th style="border:1px solid black">Fecha de realización</th>
                <th colspan="3" style="border:1px solid black; text-align:center">Trimestre 1</th>
                <th colspan="3" style="border:1px solid black; text-align:center">Trimestre 2</th>
                <th colspan="3" style="border:1px solid black; text-align:center">Trimestre 3</th>
                <th colspan="3" style="border:1px solid black; text-align:center">Trimestre 4</th>
                <th style="border:1px solid black">Evidencias</th>
                <th style="border:1px solid black">Observaciones</th>
                <th style="border:1px solid black">Editar</th>
                <td style="background-color: black;">&nbsp;</td>
            </tr>
            <tr>
                <td style="background-color: black;">&nbsp;</td>
                <th style="border:1px solid black">&nbsp;</th>
                <th style="border:1px solid black">&nbsp;</th>
                <th style="border:1px solid black">&nbsp;</th>
                <th style="border:1px solid black">&nbsp;</th>
                <th style="border:1px solid black">&nbsp;</th>
                <th style="border:1px solid black">&nbsp;</th>
                <th style="border:1px solid black">&nbsp;</th>
                <th style="border:1px solid black">ENE</th>
                <th style="border:1px solid black">FEB</th>
                <th style="border:1px solid black">MAR</th>
                <th style="border:1px solid black">ABR</th>
                <th style="border:1px solid black">MAY</th>
                <th style="border:1px solid black">JUN</th>
                <th style="border:1px solid black">JUL</th>
                <th style="border:1px solid black">AGO</th>
                <th style="border:1px solid black">SEP</th>
                <th style="border:1px solid black">OCT</th>
                <th style="border:1px solid black">NOV</th>
                <th style="border:1px solid black">DIC</th>
                <th></th>
                <th></th>
                <th></th>
                <td style="background-color: black;">&nbsp;</td>
            </tr>

        </thead>

        <% @annual_work_plan_items.each do |annual_work_plan_item| %>             
            <tbody>
                <tr>
                    <td style="background-color: black;">&nbsp;</td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.consecutive %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.aim %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.goal %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.activity %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.resource %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.responsible %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.date_realization %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 1  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 2  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 3  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 4  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 5  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 6  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 7  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 8  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 9  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 10  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 11  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.label_earring(annual_work_plan_item.earring) if annual_work_plan_item.month == 12  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.evidences_plan  %></td>
                    <td style="border:1px solid black"><%= annual_work_plan_item.observation  %></td>
                    <td style="border:1px solid black"><%= link_to t('common.edit'), edit_annual_work_plan_item_path(annual_work_plan_item), class: 'btn btn-xs btn-primary'  %></td>
                    <td style="background-color: black;">&nbsp;</td>
                </tr>
            </body>
        <% end %>
        <tr style="border:1px solid black">
            <td style="background-color: black;">&nbsp;</td>
            <td  colspan="7"; style="border:1px solid black; text-align:center"><br><br></td>
            <td  colspan="7"; style="border:1px solid black; text-align:center"><br><br></td>
            <td  colspan="8"; style="border:1px solid black; text-align:center"><br><br></td>
            <td style="background-color: black;">&nbsp;</td>
        </tr>
        <tr>
            <td style="background-color: black;">&nbsp;</td>
            <td  colspan="7"; style="border:1px solid black; text-align:center"><%= @annual_work_plan.name_user(@annual_work_plan.user_legal_representative) %> - Representante Legal</td>
            <td  colspan="7"; style="border:1px solid black; text-align:center"><%= @annual_work_plan.name_user(@annual_work_plan.user_adviser_sst) %> - Asesor SST</td>
            <td  colspan="8"; style="border:1px solid black; text-align:center"><%= @annual_work_plan.name_user(@annual_work_plan.user_responsible_sst) %> - Responsable SST</td>
            <td style="background-color: black;">&nbsp;</td>
        </tr>
    </table>
</div>    

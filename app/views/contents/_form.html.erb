<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @content do |form| %>
        <% @content.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    


        <div class="form-group">    
            <%= form.label :clasification, style: "display: block" %>
            <%= form.text_field :clasification,  class: "form-control" %>
        </div>
        <br>  
        <div class="form-group">    
            <%= form.label :title, style: "display: block" %>
            <%= form.text_field :title,  class: "form-control" %>
        </div>
        <br>  
        <div class="form-group">    
            <%= form.label :link, style: "display: block" %>
            <%= form.text_field :link,  class: "form-control" %>
        </div>
        <br>
        <div class="col-sm-5">
            <button type="button" class="btn btn-sm btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Seleccionar si desea publicar el recurso. ">Estado: <%= image_tag 'ayuda.png',:width => "25",  :height=>"25" %></button>           
                <%= form.select(:state, [['No', 0], ['Si', 1]]) %>
        </div>          
        <br>
        <div class="form-group">   
            <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        </div>    
    <% end %>
</div>        
<br>
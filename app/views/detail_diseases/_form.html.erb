<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @detail_disease do |form| %>
        <% @detail_disease.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>
        <div class="form-group">    
            <%= form.label :code_disease, style: "display: block" %>
            <%= form.text_field :code_disease,  class: "form-control" %>
        </div>

        <div class="row g-3">
            <div class="col-sm-8">
                <%= form.label :table_disease_id, style: "display: block" %>
                <%= form.collection_select :table_disease_id, TableDisease.all.order(id: :asc), :id, :clasification_disease, { prompt: '--Seleccionar--' },
                { class: 'form-control input-sm select2' } %>
            </div>        
        </div>  

        <br>    
        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, detail_diseases_path %>
    <% end %>
</div> 
<br>

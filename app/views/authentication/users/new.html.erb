<div style="background-color: #0090e4;", class="container col-xs-12 col-sm-12 col-md-5 col-lg-5 col-xl-5 text-white">
    <br>
    <h2>Crear Usuario</h2>
    <%= form_with model: @user do |form| %>
        <% @user.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>

        <div class="form-group">    
            <%= form.label :nro_document,  style: "display: block" %>
             <%= form.text_field :nro_document,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :name,  style: "display: block" %>
             <%= form.text_field :name,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :username,  style: "display: block" %>
             <%= form.text_field :username,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :email,  style: "display: block" %>
             <%= form.email_field :email,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :password,  style: "display: block" %>
            <%= form.password_field :password,  class: "form-control", required: true %>
        </div>
        <div class="form-group">    
            <%= form.label :avatar,  style: "display: block" %>
            <%= form.file_field :avatar,  class: "form-control", accept:"image/*", capture:"camera" %>
        </div>
         <br>
        <%= form.hidden_field :document_id, :value => 1, class: "form-control" %>
        <div>
            <%= form.submit value= t('common.submit')  %>
        </div>
        <br>
    <% end %>
</div>        
